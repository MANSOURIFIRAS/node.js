
{% extends "layout.twig" %}

{% block title %}list of contacts{% endblock %}

{% block content %}
<br/><br/><br/>
<div class="container m-5">
{# search form #}
  <div class="row col-md-6 col-md-offset-2">
    <form action="/contacts/search/id" method="post" style="display:flex">
      <div class="input-group input-group-sm mb-3">
        <input type="text" class="form-control" id="idContact" name="idContact" aria-label="Small" placeholder="search contact by id">
      </div>
      <button type="submit" class="btn btn-default btn-small btn-xs">search</button>
    </form>
    <br/>
    <div style="display:inline">fullName: {{foundContact.FullName}} ----- Phone:{{foundContact.Phone}}</div>
    <br/><br/><br/>
  </div>
    
  <br/><br/><br/>
	<div class="row col-md-6 col-md-offset-2 custyle">
		<table class="table table-striped custab">
			<thead>
				<a href="/contacts/new" class="btn btn-primary btn-xs pull-right">
					<b>+</b>
					Add new contact</a>
				<tr>
					<th>FullName</th>
					<th>Phone number</th>
					<th class="text-center">Action</th>
				</tr>
			</thead>

			{% for contact in contacts %}
			<tr>
				<td>{{ contact.FullName }} </td>
				<td>{{ contact.Phone }} </td>
				<td class="text-center">
					<a href="/contacts/{{ contact._id }}/edit" class="btn btn-info btn-xs">
						<span class="glyphicon glyphicon-edit"></span>
						Edit
					</a>
          <form action="/contacts/{{ contact._id }}/delete" method="post" style="display:inline">
            <button type="submit" class="btn btn-danger btn-xs">
              <span class="glyphicon glyphicon-remove"></span>
                Delete
            </span>
          </form>
				</td>
			</tr>
			{% endfor %}
		</table>
	</div>
</div>

{% endblock %}
