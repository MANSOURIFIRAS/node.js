{% extends 'layout.twig' %}

{% block content %}
<br/><br/><br/>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form id="contactForm" action="{{ isUpdate ? '/contacts/' ~ contact.id : '/contacts' }}" method="{{ isUpdate ? 'post' : 'post' }}">
        <input type="hidden" name="id" value="{{ isUpdate ? contact.id : '' }}">
        <div class="form-group">
          <label for="fullName">Full Name</label>
          <input type="text" class="form-control" id="FullName" name="FullName" value="{{ isUpdate ? contact.FullName : '' }}">
        </div>
        <div class="form-group">
          <label for="phone">Phone</label>
          <input type="text" class="form-control" id="Phone" name="Phone" value="{{ isUpdate ? contact.Phone : '' }}">
        </div>
        <button type="submit" class="btn btn-primary">{{ isUpdate ? 'Update' : 'Add' }}</button>
      </form>
    </div>
  </div>
{% endblock %}
